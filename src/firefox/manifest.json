{
  "manifest_version": 3,
  "browser_specific_settings": {
    "gecko": {
      "id": "extension@ohmychat.com"
    }
  },
  "name": "OhMyPrompt",
  "version": "1.18",
  "description": "An extension to include GPT batteries into your browser!",
  "host_permissions": ["*://*/*", "*://x.com/*", "*://x.com/**/*"],
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "activeTab",
    "tabs",
    "contextMenus",
    "storage",
    "scripting"
  ],
  "icons": {
    "16": "assets/icons/icon-16.png",
    "32": "assets/icons/icon-32.png",
    "64": "assets/icons/icon-64.png",
    "128": "assets/icons/icon-128.png"
  },
  "action": {
    "default_icon": {
      "16": "assets/icons/icon-16.png",
      "32": "assets/icons/icon-32.png",
      "64": "assets/icons/icon-64.png",
      "128": "assets/icons/icon-128.png"
    },
    "default_popup": "views/popup.html"
  },
  "options_ui": {
    "page": "views/settings.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/?ohmyprompt=1",
        "https://chatgpt.com/?ohmyprompt=1"
      ],
      "js": ["chatGPTHandler.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://gemini.google.com/app?ohmyprompt=1"],
      "js": ["geminiHandler.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://claude.ai/chats?ohmyprompt=1"],
      "js": ["claudeHandler.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://duckduckgo.com/?q=DuckDuckGo+AI+Chat&ia=chat&duckai=1&ohmyprompt=1"
      ],
      "js": ["duckAIHandler.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://huggingface.co/chat/?ohmyprompt=1"],
      "js": ["huggingChatHandler.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://poe.com/?ohmyprompt=1"],
      "js": ["poeHandler.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://twitter.com/*",
        "https://twitter.com/**/*",
        "https://x.com/**/*",
        "https://x.com/*"
      ],
      "js": ["twitterHandler.js"]
    },
    {
      "matches": ["https://youtube.com/*", "https://www.youtube.com/*"],
      "js": ["youtubeHandler.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  }
}
